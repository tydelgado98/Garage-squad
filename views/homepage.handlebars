<div id="top-row" class="row">  
<!-- Loop over each object in the projects array -->
<div class="col-md-2">
    <h2>Search</h2>

    <form class="form search-form">
      <div class="form-group">
        <label for="zipcode">Zipcode:</label>
        <input class="form-input" type="text" id="zipcode" />
      </div>
      <div class="form-group">
        <label for="item-search">Desired Item:</label>
        <input class="form-input" type="text" id="item-search" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Search</button>
      </div>
    </form>
  </div>
  <div id="map" style="width: 70%; height: 500px;"></div>
      {{{ map }}}
</div>
  <h2> Listings </h2>
  <br>
  <br>
{{#each projects as |project| }}
<div class="row mb-3 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{!-- {{{get_emoji}}} --}}
      <a href="/project/{{project.id}}">{{project.name}}</a>
    </h2>
    <form action="/profile" method="post" enctype="multipart/form-data">
</form>
  <p>{{project.item_name}} </p>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount project.price}}</span>
    </p>
    <p>Created by {{project.user.name}}</p>
    <!-- Add photo upload form -->
<form action="/upload" method="post" enctype="multipart/form-data">
  <input type="file" name="photo">
  <input type="submit" value="Upload">
</form>
  </div>
  <div class="col-md-7 pt-2">
    <p>
      {{project.description}}
    </p>
  </div>
</div>
{{/each}}

